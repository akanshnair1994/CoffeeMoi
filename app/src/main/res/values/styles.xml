<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/exo2_regular</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomSeekbar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#808080</item>
        <item name="android:progressTint">@android:color/background_light</item>
        <item name="android:thumbTint">@android:color/background_light</item>
    </style>

</resources>
